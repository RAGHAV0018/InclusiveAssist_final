<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination Alarm"
        android:textColor="@color/brand_primary"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Never miss your stop again."
        android:textColor="@color/text_secondary"
        android:textSize="18sp"
        android:layout_marginBottom="60dp" />

    <!-- Circular Status Indicator Style -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card_premium"
        android:padding="32dp"
        android:gravity="center"
        android:layout_marginBottom="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DISTANCE REMAINING"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            android:textColor="@color/brand_secondary"
            android:textSize="48sp"
            android:textStyle="bold" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="METERS"
            android:textColor="@color/brand_secondary"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
            
    </LinearLayout>

    <Button
        android:id="@+id/btnToggle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="START TRACKING"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="@color/brand_primary"
        android:textColor="@color/white"
        android:elevation="6dp" />

</LinearLayout>
